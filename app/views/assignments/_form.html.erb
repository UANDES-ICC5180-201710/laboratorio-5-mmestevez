<%= form_for(assignment) do |f| %>
    <% if assignment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>

          <ul>
            <% assignment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :statement %>
      <%= f.text_area :statement %>
    </div>

    <div class="field">
      <%= f.label :course_id %>
      <%= f.select :course_id, options_for_select(Course.all.map { |s| [s.to_s, s.id] }) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
